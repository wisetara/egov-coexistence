    <WPNpurchase>
        <headername>purchase</headername>
        <parentquery>select id \,name \,code from relation where relationtypeid='1' and id in (select distinct
            wd.relationid from worksdetail wd where wd.isactive='1') order by id
        </parentquery>
        <intermediatequery>SELECT DISTINCT wd.ID AS id \,wd.name \,wd.code FROM worksdetail wd left outer join
            eg_billregister ebr ON wd.id = ebr.worksdetailid WHERE wd.relationid=:parentId AND (ebr.worksdetailid NOT IN
            (SELECT DISTINCT worksdetailid FROM eg_billregister WHERE UPPER(billtype)='FINAL BILL' AND
            UPPER(billstatus)!='CANCELLED' AND worksdetailid IS NOT NULL ) OR ebr.worksdetailid IS NULL)
        </intermediatequery>
        <childquery></childquery>
    </WPNpurchase>

    <WPNworks>
        <headername>works</headername>
        <parentquery>select id \,name \,code from relation where relationtypeid='2' and id in (select distinct
            wd.relationid from worksdetail wd where wd.isactive='1') order by id
        </parentquery>
        <intermediatequery>SELECT DISTINCT wd.ID AS id \,wd.name \,wd.code FROM worksdetail wd left outer join
            eg_billregister ebr ON wd.id = ebr.worksdetailid WHERE wd.relationid=:parentId AND (ebr.worksdetailid NOT IN
